  "shortcuts": [
    {
      "name": "Kategoriyalar",
      "short_name": "Kategoriyalar",
      "description": "Mahsulot kategoriyalarini ko'rish",
      "url": "/categories.html",
      "icons": [
        {
          "src": "icons/shortcut-categories.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Savat",
      "short_name": "Savat",
      "description": "Xarid savatini ko'rish",
      "url": "/cart.html",
      "icons": [
        {
          "src": "icons/shortcut-cart.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Buyurtmalar",
      "short_name": "Buyurtmalar",
      "description": "Buyurtmalar tarixini ko'rish",
      "url": "/orders.html",
      "icons": [
        {
          "src": "icons/shortcut-orders.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profil",
      "short_name": "Profil",
      "description": "Foydalanuvchi profili",
      "url": "/profile.html",
      "icons": [
        {
          "src": "icons/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+domproduct",
      "url": "/product-detail.html?id=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/share-target/",
      "accept": {
        "text/plain": [".txt"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".gif"]
      }
    }
  ],

  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/plain"]
        }
      ]
    }
  }
}
